@model IEnumerable<TodoList.Models.Team>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="form-group">
    @Html.ActionLink(
             "Create a new Team",
             "Create",
             "Teams",
             null,
             new { @class = "btn btn-primary" }
             )
</div>

<div class="row">

    @foreach (var team in Model)
    {
<div class="col-md-4">
    <ul class="list-group">
        <li class="list-group-item active">
            Team: @team.Name

        </li>
        <li class="list-group-item">
            @Html.ActionLink(
                "Details",
                "Details",
                "Categories",
                new { id = team.Id },
                new { @class = "btn btn-primary" }
                )
            @Html.ActionLink(
                "Delete",
                "Delete",
                "Categories",
                new { id = team.Id },
                new { @class = "btn btn-danger" }
                )
            @Html.ActionLink(
                "Edit",
                "Edit",
                "Todoes",
                new { id = team.Id },
                new { @class = "btn btn-default" }
                )
        </li>
        <li class="list-group-item">
            @Html.ActionLink(
                        "See Members in Team",
                        "Members",
                        "Teams",
                        new { id = team.Id },
                        new { @class = "btn btn-success" }
                        )
            @Html.ActionLink(
                         "Add Members",
                         "AddMembers",
                         "Teams",
                         new { id = team.Id },
                         new { @class = "btn btn-primary" }
                         )
        </li>

    </ul>
</div>}
</div>