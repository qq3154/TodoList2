@model TodoList.ViewModels.TodoCategoriesViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit a Todo</h2>

@using (Html.BeginForm("Edit", "Todoes", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Todo.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Todo.Description)
        @Html.EditorFor(m => m.Todo.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Todo.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Todo.DueDate)
        @Html.EditorFor(m => m.Todo.DueDate, new { htmlAttributes = new { @type = "date", @class = "form-control", } })
        @Html.ValidationMessageFor(m => m.Todo.DueDate, "", new { @class = "text-danger" })
    </div> <div class="form-group">
        @Html.LabelFor(m => m.Todo.CategoryId)
        @Html.DropDownListFor(m => m.Todo.CategoryId,
            new SelectList(Model.Categories, "Id", "Name"),
            new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Todo.CategoryId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
}